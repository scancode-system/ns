<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="navigatingTo" loaded="{{ loaded }}">
	<FlexboxLayout flexDirection="column">
		<Label text="Pagamento" class="h1 m-x-15"  />
		<ListPicker items="{{ payments }}" selectedIndex="{{ index }}" selectedValue="{{ value }}" class="border border-radius-md m-y-20 m-x-15" flexGrow="1"  ></ListPicker>
		<StackLayout flexShrink="0" class="bg-light border-top">
			<Button text="{{ '0xe962' | getIcon }}" class="icon -primary"/>
		</StackLayout>
	</FlexboxLayout>
</Page>
