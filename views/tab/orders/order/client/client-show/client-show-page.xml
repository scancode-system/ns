<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="navigatingTo" loaded="{{ loaded }}">
	<FlexboxLayout flexDirection="column">
		<ScrollView flexGrow="1">
			<StackLayout class="p-x-15 p-y-10">
				<StackLayout class="nt-input">
					<TextField hint="CPF/CNPJ" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Razão Social" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Nome Fantasia" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>
				<StackLayout class="nt-input">
					<TextField hint="CEP" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Rua" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Número" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Complemento" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Bairro" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Cidade" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>

				<StackLayout class="nt-input">
					<TextField hint="Estado" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
				</StackLayout>
			</StackLayout>
		</ScrollView>
		<StackLayout flexShrink="0" class="bg-light border-top p-x-15 p-y-5">
			<Label text="Dados Comprador" class="h3" />
			<StackLayout class="nt-input">
				<TextField hint="Comprador" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
			</StackLayout>

			<StackLayout class="nt-input">
				<TextField hint="Email" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
			</StackLayout>

			<StackLayout class="nt-input">
				<TextField hint="Telefone" text="{{ cpf_cnpj }}" class="m-x-0"></TextField>
			</StackLayout>
			<FlexboxLayout>
				<Button text="{{ '0xe962' | getIcon }}" class="icon -primary m-0" flexGrow="1" />
				<Button text="{{ '0xe9ac' | getIcon }}" class="icon bg-danger t-18 m-0" flexGrow="1" />
			</FlexboxLayout>
		</StackLayout>
	</FlexboxLayout>
</Page>
