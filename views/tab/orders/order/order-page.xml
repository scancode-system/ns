<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="navigatingTo" loaded="{{ loaded }}">
	<FlexboxLayout flexDirection="column">
		<ScrollView flexGrow="1">
			<StackLayout class="p-b-5">
				<Label text="Pedido #53" class="t-25 bg-light p-x-15 p-y-10" />

				<Label text="Cliente" class="t-18 p-x-15 p-b-0 m-t-10" />
				<Button text="Indefinido" class="icon bg-danger m-0 t-18 m-x-10  p-l-15 text-left" tap="{{ gotoClient }}" />

				<Label text="Pagamento" class="t-18 p-x-15 p-b-0 m-t-10" />
				<Button text="Indefinido" class="icon bg-danger m-0 t-18 m-x-10  p-l-15 text-left" tap="{{ gotoPayment }}" />

				<StackLayout class="hr" style="margin:40px 0px 0px 0px;"></StackLayout>

				<Label text="Observação" class="t-18 p-x-15 p-b-0 m-t-10" />
				<Button text="Indefinido" class="icon -primary m-0 t-18 m-x-10  p-l-15 text-left" tap="{{ gotoObservation }}" />

				<Label text="Entrega" class="t-18 p-x-15 p-b-0 m-t-10" />
				<Button text="Integral" class="icon -primary m-0 t-18 m-x-10  p-l-15 text-left" tap="{{ gotoDelivery }}" />

				<Label text="Transportadora" class="t-18 p-x-15 p-b-0 m-t-10" />
				<Button text="Indefinido" class="icon -primary m-0 t-18 m-x-10  p-l-15 text-left" tap="{{ gotoShippingCompany }}" />

				<Label text="Desconto" class="t-18 p-x-15 p-b-0 m-t-10" />
				<Button text="Indefinido" class="icon -primary m-0 t-18 m-x-10  p-l-15 text-left" tap="{{ gotoDiscount }}" />

			</StackLayout>
		</ScrollView>
		<StackLayout class="bg-light p-x-10 border-top" flexShrink="0">
			<FlexboxLayout justifyContent="center" class="p-y-5">
				<Label text="Total: " class="t-18" />
				<Label text="{{ '342.434'  | concurrency }}" class="t-18" />
			</FlexboxLayout>
			<FlexboxLayout>
				<Button text="{{ '0xe90f' | getIcon }}" class="icon -primary m-0 t-25" flexGrow="1"  />
				<Button text="Concluir" class="-primary m-0" flexGrow="1" />	
			</FlexboxLayout>	
		</StackLayout>
	</FlexboxLayout>
</Page>
