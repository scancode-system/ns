<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="navigatingTo" loaded="{{ loaded }}">
	<FlexboxLayout flexDirection="column" class="p-y-10" flexGrow="1" >
		<FlexboxLayout  justifyContent="center"  visibility="{{ loading }}" flexGrow="1">
			<Label text="Registrando Novo Pedido" class="t-12 m-r-20" alignSelf="center" />
			<ActivityIndicator busy="true" loaded="indicatorLoaded" />				
		</FlexboxLayout>
		<Button text="ABRIR PEDIDO" class="-outline t-36 -rounded-sm"  tap="{{ gotoOrder }}" flexGrow="1" visibility="{{ content }}" />
		<Button text="MEUS PEDIDOS" class="-outline t-36 -rounded-sm"  tap="{{ gotoHistoric }}" flexGrow="1"  visibility="{{ content }}" />
	</FlexboxLayout>
</Page>
