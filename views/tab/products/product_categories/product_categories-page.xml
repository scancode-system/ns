<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="navigatingTo" loaded="{{ loaded }}">
	<ListView items="{{ categories }}" itemTap="{{ gotoProducts }}" >
		<ListView.itemTemplate>
			<StackLayout class="-separator" class="p-y-20">
				<Label text="{{ description }}" class="t-14" />
			</StackLayout>
		</ListView.itemTemplate>
	</ListView>
</Page>
